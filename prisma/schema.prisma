// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id              Int               @id @default(autoincrement())
  price_cents     Int
  description     String?
  image_url       String?
  merchant        Merchant          @relation(fields: [merchantId], references: [id])
  merchantId      Int               @unique
  categories      Categories        @relation(fields: [categoriesId], references: [id])
  categoriesId    Int               @unique
  animalTypes     AnimalTypes       @relation(fields: [animalTypesId], references: [id])
  animalTypesId   Int               @unique
  Order           Order?            @relation(fields: [orderId], references: [id])
  orderId         Int?
  Comment         Comment[]
  CustomerProduct CustomerProduct[]
}

model Categories {
  id      Int       @id @default(autoincrement())
  name    String?
  Product Product[]
}

model AnimalTypes {
  id      Int       @id @default(autoincrement())
  name    String?
  Product Product[]
}

model Order {
  id                Int       @id @default(autoincrement())
  total_price_cents Int
  status            String?
  created_at        String?
  Product           Product[]
  customer          Customer  @relation(fields: [customerId], references: [id])
  customerId        Int       @unique
}

model Merchant {
  id          Int       @id @default(autoincrement())
  username    String?
  email       String?
  password    String?
  cnpj        String?
  phoneNumber String?
  address     String?
  companyName String?
  ownerName   String?
  Product     Product[]
}

model Customer {
  id              Int               @id @default(autoincrement())
  Order           Order[]
  username        String?           @unique
  email           String?
  password        String?
  cpf             String?
  phoneNumber     String?
  address         String?
  Comment         Comment[]
  CustomerProduct CustomerProduct[]
}

model Comment {
  id         Int      @id @default(autoincrement())
  comment    String?
  date       String?
  customer   Customer @relation(fields: [customerId], references: [id])
  customerId Int      @unique
  product    Product  @relation(fields: [productId], references: [id])
  productId  Int      @unique
}

model CustomerProduct {
  id         Int      @id @default(autoincrement())
  customer   Customer @relation(fields: [customerId], references: [id])
  customerId Int      @unique
  product    Product  @relation(fields: [productId], references: [id])
  productId  Int      @unique
}

model Admin {
  id       Int     @id @default(autoincrement())
  username String?
  email    String?
  password String?
}
