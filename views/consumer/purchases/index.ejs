<%- contentFor('content') %>

<div class='lateral-menu'>
  <ul>
    <li><a href="/profile">Meu perfil</a></li>
    <li><b><a href="#">Minhas compras</a></b></li>
  </ul>
</div>
<div class='purchases'>
  <h1>Minhas compras</h1>

  <% purchases.forEach((purchase) => { %>
  <div class="purchase">
    <div class="header">
      <div class="left">
        <div>
          <small>PEDIDO REALIZADO</small>
          <p><%= purchase.created_at %></p>
        </div>
        <div>
          <small>TOTAL</small>
          <p>R$ <%= purchase.total_price_cents / 100 %></p>
        </div>
      </div>
      <div class="right">
        <small>PEDIDO NÂº <%= purchase.id %>></small><br>
        <a href="/purchase/<%= purchase.id %>">Visualizar comprovante</a>
      </div>
    </div>
    <div class="body">
      <h3><%= purchase.status %></h3>

      <div class="items">
        <% purchase.products.forEach((product) => { %>
        <div class="item">
          <div class="info">
            <img src="<%= product.image_url %>" class="image" alt="product-image">
            <div class="name"><%= product.name %></div>
          </div>
          <div class="values">
            <p>Qtd: <% product.quantity %></p>
            <p>R$ <%= product.price_cents / 100 %></p>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </div>
  <% }) %>

</div>