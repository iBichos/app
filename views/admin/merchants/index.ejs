<%- contentFor('content') %>

<section>
  <h2>Logistas cadastrados</h2>
  <div class="body">
    <table>
      <tr>
        <th>Logista</th>
        <th>CNPJ</th>
        <th>Nome da empresa</th>
        <th>Ações</th>
      </tr>
      <% merchants.forEach((merchant) => { %>
        <tr>
          <td><a href="/admin/merchant/<%= merchant.id %>"><%= merchant.username %></a></td>
          <td><a href="/admin/merchant/<%= merchant.cnpj %>"><%= merchant.cnpj %></a></td>
          <td><a href="/admin/merchant/<%= merchant.companyName %>"><%= merchant.companyName %></a></td>
          <td>
            <form method="POST" action="/admin/merchant/<%= merchant.id %>?_method=DELETE">
              <button type="submit">Excluir</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </table>
  </div>
</section>