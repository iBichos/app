<%- contentFor('content') %>

<div class="wishlist_title">Lista de desejos</div>
<div class="wishlist">
    <% customer_products.forEach((customer_product)=>{ %>

      <% let product = customer_product.product %>
  
      <div class="wishlist-item">
        <img src="<%= product.image_url %>" alt="image" class="wishlist_product_image" width="50px">
        <div class="wishlist_product_name">
          <h3><%= product.name %></h3>
        </div>
        <div class="wishlist_product_info">
          <div class="wishlist_product_name">R$ <%= product.price_cents / 100 %></div>
        </div>
        <div class="wishlist_product_info">
            <form method="POST" action="/customer_products/<%= customer_product.id %>?_method=DELETE">
                <button class="delete" type="submit">Excluir</button>
              </form>
        </div>
      </div>
    <% }) %>
  </div>