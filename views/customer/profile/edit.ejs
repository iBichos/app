<%- contentFor('content') %>

<section class="form">
  <h1> Meu perfil </h1>
  <div class = "container-wrapper">
    <div class="wrapper">
      <form action="/profile/?_method=PUT" method="POST">
        <div class="form-row">
          <div class="field">
            <input type="text" value="<%= session.customer.username %>" required name="username">
            <label>Nome</label>
          </div>
          <div class="field">
            <input type="text" required value="<%= session.customer.cpf %>" name="cpf">
            <label>CPF</label>
          </div>
        </div>
        <div class="form-row">
          <div class="field">
            <input type="text" required value="<%= session.customer.address %>" name="address">
            <label>Endere√ßo</label>
          </div>
          <div class="field">
            <input type="text" required value="<%= session.customer.phoneNumber %>" name="phoneNumber">
            <label>Telefone</label>
          </div>
        </div>
        <div class="form-row">
          <div class="field">
              <input type="email" required value="<%= session.customer.email %>" name="email">
              <label>E-mail</label>
          </div>
          <div class="field">
              <input type="password" name="password" value="<%= session.customer.password %>">
              <label>Senha</label>
          </div>
        </div>
        <button type="submit" class="button-green">
          Salvar
        </button>
      </form>
    </div>
  </div>
</section>