<%- contentFor('content') %>


<div class='order-container'>
  <h2>Meus pedidos</h2>
  <% orders.forEach((order) => { %>
  <div class="order">
    <div class="header">
      <div class="left">
        <div>
          <p>PEDIDO REALIZADO</p>
          <p><%= order.created_at %></p>
        </div>
        <div>
          <p>TOTAL</p>
          <p>R$ <%= order.total_price_cents / 100 %></p>
        </div>
      </div>
      <div class="right">
        <p>PEDIDO NÂº <%= order.id %></p>
        <p><a href="/orders/<%= order.id %>">Visualizar comprovante</a></p>
      </div>
    </div>
    <div class="body">
      <h3><%= order.status %></h3>
      <div class="order-items">
        <% order.products.forEach((product)=>{ %>
          <div class="order-item">
            <img src="<%= product.image_url %>" alt="image" class="product_image" width="50px">
  
            <div class="product_name">
              <h3><%= product.name %></h3>
            </div>
            <div class="product_infos">
              <span class="product_qtd">Qtd: <%= product.quantity %></span>
              <span class="product_price">R$ <%= product.price_cents / 100 %></span>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>
  <% }) %>
</div>