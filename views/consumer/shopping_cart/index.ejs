<%- contentFor('content') %>

<section class="cart">
  <h1><strong> Carrinho </strong></h1>
  <div class="cart_infos">
    <div class="product_list">
      <div class="table_header">
        <h2>Quantidade </h2>
        <h2>Valor </h2>
      </div>
      <% shopping_cart.products.forEach((product)=>{ %>
        <div class="product">
          <img src="<%= product.image_url %>" alt="image" class="product_image" width="50px">

          <div class="product_name">
            <h2><%= product.name %></h2>
          </div>
          <div class="product_infos">
            <span class="product_qtd"><strong><%= product.quantity %></strong></span>
            <span class="product_price"><strong>R$ <%= product.price_cents / 100 %></strong></span>
          </div>
        </div>
      <% }) %>
    </div>
    <div class="infos">
      <div class="zip_code">
        Escreva seu CEP: 
        <input type="text">
      </div>
      <div class="subtotal">
        <div>
          Subtotal (<%= shopping_cart.products.length %> items): <strong>R$ <%= shopping_cart_total %></strong>
        </div>
        <div class="submit_button">
          <a href="../order/show.html" class="button">Comprar </a>
        </div>
      </div>
    </div>
  </div>
</section>